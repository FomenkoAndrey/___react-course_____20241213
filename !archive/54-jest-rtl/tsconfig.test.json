{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "@testing-library/react",
      "@testing-library/user-event"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.ts"
  ]
}
